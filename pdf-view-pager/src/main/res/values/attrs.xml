<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PDFViewPager">
        <attr name="assetFileName" format="string" /> <!-- Load PDF from Asset -->
        <attr name="pdfUrl" format="string" /> <!-- Load PDF from remote URL -->
        <attr name="pageBitmapScale" format="float|reference" />
    </declare-styleable>

    <declare-styleable name="ScrollBar">
        <attr name="sb_handleColor" format="color|reference"/>
        <attr name="sb_indicatorColor" format="color|reference"/>
        <attr name="sb_indicatorTextColor" format="color|reference"/>
    </declare-styleable>
</resources>